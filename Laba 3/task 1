#include <fstream>
#include <iostream>
 
 
 
int main() {
    
    std::ifstream f_in("predel.txt");
    int limit;
 
    if (!f_in) {
 
        std::cerr << "не удалось открыть файл\n";
        return 1;
 
    }
 
    f_in >> limit;
    f_in.close();
 
    int current;
    int max = INT_MIN;
    int sum = 0;
    std::size_t number = 0;
 
    while (sum < limit) {
 
        std::cout << "Введите число: ";
        std::cin >> current;
        ++number;
 
        if (number % 2 == 0)
            sum = sum + current;
 
        if (max < current)
            max = current;
 
    }
    
    std::ofstream f_out("kolmax.txt");
    f_out << number << " " << max << '\n';
 
    return 0;
}
