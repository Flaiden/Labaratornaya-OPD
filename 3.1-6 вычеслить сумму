void PLUS(int ch1,int zn1, int ch2, int zn2)
{
int chres, znres, NOD;
NOD = nod(zn1, zn2);
znres = zn1* zn2 / NOD;
chres = ch1 * zn2 / NOD +ch2 * zn1 / NOD;
cout << chres << endl;
cout << "-------" << endl;
cout << znres << endl;
}

// рекурсивная функция наименьшего общего делителя:

int nod(int a, int b)
{
if (a % b == 0 )
return b;
else
return nod(b, a % b);
}

